<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
 
  <xacro:include filename="$(find tm_description)/xacro/schmalz_ecbpi.gazebo.xacro"/>  

  <xacro:property name="joint_lower_limit" value="0.0" />
  <xacro:property name="joint_upper_limit" value="0.055" />

  <xacro:macro name="ecbpi_hand" params="parent_link robot_name">
    <link name="ecbpi_base">
      <!--<inertial>
        <mass value="0.745" />
        <origin xyz="0 0.0 0.055" rpy="0 0 0" />
        <inertia ixx="0.003084" ixy="0.0" ixz="0.0" iyy="0.002999" iyz="0.0" izz="0.000546" />
      </inertial>-->
      <visual>
        <!--origin xyz="0 0 0.0" rpy="0 0 0"/-->
        <geometry>          
          <mesh filename="file://$(find tm_description)/meshes/ecbpi/visual/ecbpi.dae" scale="1000 1000 1000"/>          
        </geometry>
        <material name="">
          <color rgba="1 1 1 1"/>
        </material>        
      </visual>
      <!--<visual>        
        <origin xyz="0 0 ${0.015+0.095}" rpy="0 0 0"/>
        <geometry>          
          <cylinder radius="0.006" length="0.03"/>
        </geometry>
        <material name="">
          <color rgba="1 1 1 1"/>
        </material>        
      </visual>-->      
      <collision>
        <!-- -0.095 + 0.102/2 = -0.044-->
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>          
          <mesh filename="file://$(find tm_description)/meshes/ecbpi/collision/ecbpi_c.dae" scale="1000 1000 1000"/>
        </geometry>       
      </collision>      
    </link>

    <joint name="${parent_link}_to_ecbpi_joint" type="fixed">
      <parent link="${parent_link}"/>
      <child link="ecbpi_base"/>
      <origin xyz="0 0 0" rpy="0 0 ${0.5*pi}"/>      
    </joint>

    <xacro:ecbpi_hand_gazebo robot_name="${robot_name}" />    
  </xacro:macro>

</robot>
